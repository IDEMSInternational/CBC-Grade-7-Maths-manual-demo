    <questionvariables>
      <text>/* Randomize key variables */
cash_price : rand(20000) + 10000;       /* Random cash price between 10,000 and 30,000 */
deposit_rate : rand(21) + 10;           /* Random deposit % between 10% and 30% */
interest_rate : rand(11) + 5;           /* Random interest rate between 5% and 15% */
months : rand(25) + 12;                 /* Number of months between 12 and 36 */

/* Convert percentages to decimals */
deposit_decimal : deposit_rate / 100;
interest_decimal : interest_rate / 100;

/* Calculate deposit */
deposit : cash_price * deposit_decimal;

/* Balance to be paid on hire purchase */
balance : cash_price - deposit;

/* Calculate total interest */
interest : balance * interest_decimal;

/* Total amount to be paid in installments */
total_installment_amount : balance + interest;

/* Monthly installment */
monthly_installment : total_installment_amount / months;</text>
