fourth_digit:rand_with_prohib(1,9,[first_digit,second_digit,third_digit]);
fifth_digit:rand_with_prohib(1,9,[first_digit,second_digit,third_digit,fourth_digit]);

denominator:[100,1000,1000,10000];
rand_selector1:rand(4)+1;
rand_selector2:rand_with_prohib(1,4,[rand_selector1]);
rand_selector3:rand_with_prohib(1,4,[rand_selector1,rand_selector2]);
display_decimalplaces:rand(4)+2;

first_number:float((first_digit*10000 + second_digit*1000 + third_digit*100 + fourth_digit*10 + fifth_digit)/denominator[rand_selector1]);
second_number:float((first_digit*10 + second_digit)/denominator[rand_selector2]);
third_number:float((first_digit*100000 + third_digit)/denominator[rand_selector3] );
fourth_number:dispdp(float(((fourth_digit*100)+(fifth_digit*10)+ second_digit)/10),display_decimalplaces);

ta1:5;
ta2:2;
ta3:6;
ta4:display_decimalplaces+2;
</text>
