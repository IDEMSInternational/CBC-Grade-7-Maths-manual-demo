    <questionvariables>
      <text>/* Randomize input values */
P : rand(9000) + 1000;         /* Principal between $1000 and $9999 */
r_app : rand(11) + 5;          /* Appreciation rate: 5%–15% */
n_app : rand(3) + 1;           /* Years appreciated: 1–3 */
r_dep : rand(16) + 5;          /* Depreciation rate: 5%–20% */

/* Step 1: Appreciation calculation */
A1 : P * (1 + r_app/100)^n_app;

/* Step 2: Depreciation calculation */
A2 : A1 * (1 - r_dep/100);

/* Step 3: Difference and percentage change */
diff : A2 - P;
perc_change : ((A2 - P) / P) * 100;</text>
